<Window x:Class="WPF_Banken.Windows.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Banken.Windows"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="txtChosenName" Grid.Row="1" Grid.Column="1" Margin="10" Text="username here"/>
        <TextBox x:Name="txtChosenpassword" Grid.Row="2" Grid.Column="1" Margin="10" Text="password here"/>
        <Button x:Name="btnRegisterNew" Content="ok" Grid.Column="1" Grid.Row="3" FontSize="22" Click="btnRegisterNew_Click" Margin="20"/>
        <Button x:Name="btnReturnToMain" Content="Return" Grid.Column="1" Grid.Row="4" FontSize="22"  Margin="20" Click="btnReturnToMain_Click"/>
    </Grid>
</Window>
